# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
API_VERSION=v1

# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Option 1: Use service account file (recommended for local development)
# Place your firebase-service-account.json in the server directory
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Option 2: Use environment variables (good for production/CI)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ============================================
# JWT CONFIGURATION
# ============================================
# IMPORTANT: Change these secrets in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-also-make-it-long-and-random
JWT_REFRESH_EXPIRE=30d

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:3000

# ============================================
# CLIENT URL (for email links and redirects)
# ============================================
CLIENT_URL=http://localhost:3000

# ============================================
# CODE EXECUTION CONFIGURATION
# ============================================
# REQUIRES: Docker daemon running
# Timeout in milliseconds, Memory limit in MB
CODE_EXECUTION_TIMEOUT=10000
CODE_EXECUTION_MEMORY_LIMIT=256

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ============================================
# EMAIL CONFIGURATION (REQUIRED for notifications)
# ============================================
# WARNING: Email features (welcome emails, password reset, notifications) 
# will NOT work without proper SMTP configuration
# For Gmail: Enable "Less secure app access" or use App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@edueval.com

# ============================================
# ADMIN SEED CONFIGURATION
# ============================================
SEED_ADMIN_EMAIL=admin@edueval.local
SEED_ADMIN_PASSWORD=Admin@12345
SEED_ADMIN_NAME=EduEval Admin

# ============================================
# OAUTH CONFIGURATION (NOT IMPLEMENTED YET)
# ============================================
# NOTE: OAuth providers are planned for future release
# The following configurations are for reference only and are not currently functional
# SESSION_SECRET=your-session-secret-change-this
# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_CALLBACK_URL=http://localhost:5000/api/oauth/google/callback
# MICROSOFT_CLIENT_ID=your-microsoft-client-id
# MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
# MICROSOFT_CALLBACK_URL=http://localhost:5000/api/oauth/microsoft/callback
# MICROSOFT_TENANT=common

# ============================================
# REDIS CONFIGURATION (OPTIONAL - Not implemented yet)
# ============================================
# NOTE: Redis caching support is planned for future release
# REDIS_HOST=localhost
# REDIS_PORT=6379
